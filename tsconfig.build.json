{
	"compilerOptions": {
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": false,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "dist"]
}
